      <div class="content-wrapper">
            <div id="chamados-container" class="mt-3">
                @foreach (var chamado in Model.Chamados)
                {
                    <div class="ticket-card">
                        <img src="/images/logoticket.png" alt="Ticket" class="ticket-icon">
                        <span>
                            @chamado.Status.ToString() -
                            <span class="chamado-numero">Chamado @chamado.Id</span> - <!-- Adiciona o número do chamado -->
                            <span class="cronometro" data-criado-em="@chamado.DataCriacao.ToString("o")">00:00</span>
                        </span>
                    </div>
                }
                <div class="d-flex align-items-center">
                    <button type="button" id="btnNovoChamado" class="btn p-0 border-0 rounded-circle shadow-sm btn-novo-chamado">
                        <img src="~/images/logoticket.png" alt="Novo Ticket" class="img-fluid rounded-circle" loading="lazy">
                    </button>
                    <input type="hidden" id="requestVerificationToken" value="@Antiforgery.GetAndStoreTokens(HttpContext).RequestToken" />
                </div>
            </div>
      </div>
